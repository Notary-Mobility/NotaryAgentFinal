<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".activity.MySignings">

    <RelativeLayout
        android:id="@+id/mainlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/toobarcolor"

            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/CustomTheme" />



        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/exit_app_but"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_backwhite" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:text="@string/mysigning"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlay"
        android:layout_margin="10dp"

        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/allrides"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/border_filled_red"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/allrides"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/upcomingtv"
                android:layout_width="match_parent"

                android:layout_height="35dp"
                android:background="@drawable/border_rec_toolcolor"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/upcoming"
                android:textColor="@color/toobarcolor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/completedtv"
                android:layout_width="match_parent"

                android:layout_height="35dp"
                android:background="@drawable/border_rec_toolcolor"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/completed"
                android:textColor="@color/toobarcolor" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar">

        <ListView
            android:id="@+id/ridehistory_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"></ListView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/prgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
<TextView
    android:visibility="gone"
    android:textSize="@dimen/medium"
    android:textColor="@color/black"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:id="@+id/ride_sts_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</RelativeLayout>
